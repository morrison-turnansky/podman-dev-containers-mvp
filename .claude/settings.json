{
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/skill-activation-prompt.py"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/post-tool-use-tracker.py"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Read(**/*)",
      "WebSearch",
      "WebFetch"
    ],
    "deny": [
      "Read(.env)",
      "Read(.env.*)",
      "Read(**/*.key)",
      "Read(**/*.pem)",
      "Read(**/credentials.json)",
      "Read(**/secrets.yaml)",
      "Read(~/.aws/**)",
      "Read(~/.ssh/**)",
      "Read(**/*.pt)",
      "Read(**/*.pth)",
      "Read(**/*.h5)",
      "Read(**/*.ckpt)",
      "Read(data/**)",
      "Read(datasets/**)",
      "Read(checkpoints/**)"
    ],
    "ask": [
      "Bash"
    ]
  }
}
